<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_timetable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="6dp"
    app:cardBackgroundColor="#D2E4EA"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recycler_row_appointment_lecture_name_timetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="3dp"
                android:paddingTop="2dp"
                android:paddingBottom="1dp"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recycler_row_appointment_day_timetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="3dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/recycler_row_appointment_time_timetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="3dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/recycler_row_appointments_place_timetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="3dp"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recycler_row_appointment_linearlayout_timetable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switch1_timetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>