<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Timetable">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:id="@+id/days"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:weightSum="5.7">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.7"
                android:background="#dcdcdc"
                android:ellipsize="end"
                android:padding="2dip"
                android:singleLine="false"
                android:text="Time"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:ellipsize="end"
                android:padding="2dip"
                android:singleLine="false"
                android:text="Monday"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:ellipsize="end"
                android:padding="2dip"
                android:singleLine="false"
                android:text="Tuesday"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:ellipsize="end"
                android:padding="2dip"
                android:singleLine="false"
                android:text="Wednesday"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:ellipsize="end"
                android:padding="2dip"
                android:singleLine="false"
                android:text="Thursday"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#dcdcdc"
                android:ellipsize="end"
                android:padding="2dip"
                android:singleLine="false"
                android:text="Friday"
                android:textColor="#000000" />
        </TableRow>


    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@id/days"
        tools:layout_editor_absoluteX="1dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:weightSum="5.7">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.7"
                    android:background="#dcdcdc"
                    android:ellipsize="end"
                    android:padding="2dip"
                    android:singleLine="false"
                    android:text="8.00-9.00"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Mon_8"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#dcdcdc"
                    android:ellipsize="end"
                    android:padding="2dip"
                    android:singleLine="false"
                    android:text="Monday8"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Tue_8"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#dcdcdc"
                    android:ellipsize="end"
                    android:padding="2dip"
                    android:singleLine="false"
                    android:text="Tuesday8"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Wed_8"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#dcdcdc"
                    android:ellipsize="end"
                    android:padding="2dip"
                    android:singleLine="false"
                    android:text="Wednesday8"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Thu_8"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#dcdcdc"
                    android:backgroundTint="#B63131"
                    android:ellipsize="end"
                    android:padding="2dip"
                    android:singleLine="false"
                    android:text="Thursday8"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Fri_8"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#dcdcdc"
                    android:ellipsize="end"
                    android:padding="2dip"
                    android:singleLine="false"
                    android:text="Friday8"
                    android:textColor="#000000" />


            </TableRow>


        </TableLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="409dp"
        android:layout_height="50dp"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>



</androidx.constraintlayout.widget.ConstraintLayout>



