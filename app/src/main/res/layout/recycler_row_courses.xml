<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutCourse1"
    android:layout_width="match_parent"
    android:layout_height="118dp"
    android:background="@android:color/transparent"
    android:backgroundTint="#1F407A"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingEnd="25dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:outlineSpotShadowColor="#000000"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:orientation="vertical">

                                <TextView
                                    android:id="@+id/recycler_row_Course_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:gravity="center"
                                    android:text="Course_name"
                                    android:textAlignment="gravity"
                                    android:textColor="#1F407A"
                                    android:textStyle="bold"
                                    card_view:autoSizeMaxTextSize="18sp"
                                    card_view:autoSizeMinTextSize="12sp"
                                    card_view:autoSizeStepGranularity="2sp"
                                    card_view:autoSizeTextType="uniform" />

                                <TextView
                                    android:id="@+id/recycler_row_credits"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:gravity="center"
                                    android:text="credits"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6"
                            android:gravity="center"
                            android:orientation="vertical">

                                <Button
                                    android:id="@+id/button_appointments"
                                    style="?android:attr/borderlessButtonStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#00FFFFFF"
                                    android:text="select appointments"
                                    android:textAllCaps="false"
                                    android:textSize="12sp" />

                                <Button
                                    android:id="@+id/button_delete"
                                    style="?android:attr/borderlessButtonStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#00FFFFFF"
                                    android:elevation="0dp"
                                    android:text="delete"
                                    android:textColor="#FF0000"
                                    android:textSize="12sp" />

                        </LinearLayout>
                </LinearLayout>

        </androidx.cardview.widget.CardView>


</LinearLayout>